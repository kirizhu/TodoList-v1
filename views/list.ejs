<%- include('header'); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% newListItems.forEach(item => { %>
  <form action="/delete" method="post">
    <div class="item">
      <!-- prettier-ignore -->
      <input value=<%= item._id %> type="checkbox" name="checkbox"
      onChange="this.form.submit()" />
      <p><%= item.name %></p>
    </div>
    <!-- prettier-ignore -->
    <input value=<%= listTitle %> type="hidden" name="listName"></input>
  </form>
  <%})%>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <!-- prettier-ignore -->
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>
<%- include('footer'); -%>
